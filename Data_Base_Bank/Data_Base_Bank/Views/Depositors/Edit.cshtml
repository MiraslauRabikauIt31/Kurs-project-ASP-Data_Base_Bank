@model Data_Base_Bank.Models.Depositor
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>
    <a asp-area="" asp-controller="Depositors" asp-action="Index">Back</a>
</h3>

<h2>Edit Depositor № @Model.DepositorID</h2>

@using (Html.BeginForm("Edit", "Depositors", FormMethod.Post))
{
<fieldset>
    @Html.HiddenFor(model => model.DepositorID)
    <p>
        @Html.LabelFor(model => model.NameDep, "Имя Вкладчика")
        <br />
        @Html.EditorFor(model => model.NameDep)
    </p>
    <p>
        @Html.LabelFor(model => model.SurnameDep, "Фамилия Вкладчика")
        <br />
        @Html.EditorFor(model => model.SurnameDep)
    </p>
    <p>
        @Html.LabelFor(model => model.MiddlenameDep, "Отчество Вкладчика")
        <br />
        @Html.EditorFor(model => model.MiddlenameDep)
    </p>
    <p>
        @Html.LabelFor(model => model.Addres, "Адрес")
        <br />
        @Html.EditorFor(model => model.Addres)
    </p>
    <p>
        @Html.LabelFor(model => model.Phone, "Телефон")
        <br />
        @Html.EditorFor(model => model.Phone)
    </p>
    <p>
        @Html.LabelFor(model => model.Passportdata, "Паспортные данные")
        <br />
        @Html.EditorFor(model => model.Passportdata)
    </p>
    <p>
        <input type="submit" value="Изменить" />
    </p>
</fieldset>
}



